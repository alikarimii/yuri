{
  "name": "yuri-typescript-toolbox",
  "displayName": "Yuri",
  "description": "typescript toolbox with config options",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "publisher": "Qteam",
  "icon": "icon.png",
  "repository": {
  "type": "git",
  "url": "https://github.com/alikarimii/yuri.git"
},
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createIndex",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Yuri TypeScript Toolbox",
      "properties": {
        "yuri.generateClass.inNewFile": {
          "type": "boolean",
          "default": false,
          "description": "Generate class in a new file (true) or inline in the current file (false)."
        },
        "yuri.generateViewInterfaces.inNewFile": {
          "type": "boolean",
          "default": false,
          "description": "Generate view in a new file (true) or inline in the current file (false)."
        },
        "yuri.generateViewInterfaces.validationMode": {
          "type": "string",
          "default": "partial",
          "description": "Validation mode in Generate View Interfaces: _viewSchema field match with Base interface"
        },
        "yuri.generateClass.classNameSuffix": {
          "type": "string",
          "default": "Impl",
          "description": "Suffix to add to generated class names."
        }
      }
    },
    "commands": [
      {
      "command": "yuri.addGettersToClassProps",
      "title": "Add Getters to Class Properties (Yuri)"
    },
    {
      "command": "yuri.addReadonlyToClassProps",
      "title": "Add readonly to Class Properties (Yuri)"
    },
    {
      "command": "yuri.generateClassFromInterface",
      "title": "Generate Class from Interface (Yuri)"
    },
    {
      "command": "yuri.refactorCQRSHandlerToUseCase",
      "title": "Refactor CQRS Handler to Use Case (Yuri)"
    },
    {
      "command": "yuri.addMissingConstructorProps",
      "title": "Add Missing Constructor Props"
    },
    {
      "title": "Sync Class with Interface",
      "command": "yuri.syncClassWithInterfaceProps"
    },
    {
      "title": "Generate Class from Type",
      "command": "yuri.generateClassFromType"
    },
    {
      "command": "extension.createIndex",
      "title": "Create index.ts and export all [Yuri]"
    },
    {
      "title": "Generate View Interfaces",
      "command": "yuri.generateViewInterfaces"
    }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.15.30",
    "@types/vscode": "^1.87.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "ts-morph": "^21.0.0"
  }
}
